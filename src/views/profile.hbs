

    <!-- Starts Main Section -->
    <main>

        <!-- Start Profile Details Section -->
        <div class="profile">

            <!-- Start Profile Personal Data Section -->
            <div class="profile-data">
                <div class="profile_img">
                    <div class="image">
                        <img src="/static/images/person.png" alt="img8">
                    </div>
                </div>
                <div class="personal">
                    <div class="edit">
                        <!-- User Username -->
                        <p>{{profiler.username}}</p>
                    </div>
                    <div class="data">

                        <!-- Total Number of Photos by the User -->
                        <span>{{pictures.length}}</span>
                        <p>photos</p>

                    </div>
                    <!-- User Email Address -->
                    <p class="email">{{profiler.email}}</p>
                </div>
            </div>

            {{#if pictures}}
            <div class="pet-photos">

                {{#each pictures}}
                  {{>pics}}
                  {{/each}}
                {{else}}
                <article class="not-available-photo">
                    <h1>You haven't uploaded photos yetâ€¦</h1>
                </article>
                {{/if}}
            </div>

        </div>

    </main>

